<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:id="@+id/welcome_fragment"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="left"
              android:gravity="center_vertical"
              android:orientation="horizontal"
              android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_weight="1"
        android:clipChildren="false"
        android:orientation="vertical"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/welcome_page_heading"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="32dp"
            android:text="@string/sample_heading"
            android:textAppearance="@style/HeaderText"/>

        <TextView
            android:id="@+id/welcome_page_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="8dp"
            android:minHeight="96dp"
            android:text="@string/sample_content"
            android:textAppearance="@style/ContentText"/>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/images"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_weight="1"
        android:clipChildren="false">

        <ImageView
            android:id="@+id/welcome_page_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="0dp"
            android:scaleType="centerInside"/>
        <!--android:src="@drawable/test"-->

    </FrameLayout>

</LinearLayout>
