<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/welcome_fragment"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:clipChildren="false"
              android:background="#0F9D58"
              android:orientation="vertical"
              android:paddingTop="16dp">

    <FrameLayout
        android:id="@+id/images"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:layout_marginTop="0dp"
        android:clipChildren="false">

        <ImageView 
            android:id="@+id/welcome_page_image"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="centerInside"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="48dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:src="@drawable/test"
            android:layout_gravity="center"
            android:contentDescription="@string/welcome_page_image"/>

    </FrameLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="16dp"
        >

    <TextView
        android:id="@+id/welcome_page_heading"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/sample_heading"
        android:textAppearance="@style/HeaderText" />

    <TextView
        android:id="@+id/welcome_page_content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="8dp"
        android:minHeight="96dp"
        android:text="@string/sample_content"
        android:textAppearance="@style/ContentText" />

    </LinearLayout>

</LinearLayout>
